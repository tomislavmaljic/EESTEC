<div class="info-box">
  <!-- Apply any bg-* class to to the icon to color it -->
  <span class="info-box-icon bg-red"><i class="fa fa-files-o"></i></span>
  <div class="info-box-content">
    <span class="info-box-text"> Broj životopisa</span>
    <span class="info-box-number"> 0</span>
  </div><!-- /.info-box-content -->
</div><!-- /.info-box -->

<br/>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Ime</th>
      <th>Prezime</th>
      <th>Fakultet</th>
      <th>Godina studija</th>
      <th>Smjer</th>
      <th>E-mail</th>
      <th>Vještine</th>
      <th>Član EESTEC-a</th>
      <th>Životopis</th>
    </tr>
  </thead>
  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= resume.name %></td>
        <td><%= resume.surname %></td>
        <td><%= resume.college %></td>
        <td><%= resume.year %></td>
        <td><%= resume.course %></td>
        <td><%= resume.email %></td>
        <td><%= resume.keywords.gsub(";"," ") %></td>
        <td><%= resume.member %></td>
        <td><%= link_to "Preuzmi", resume.attachment_url %></td>
        <td><%= button_to "Izbriši", resume, :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
