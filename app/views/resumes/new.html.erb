<% if !@resume.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @resume.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for @resume do |f| %>
    <%= f.label "Ime" %>
    <%= f.text_field :name %>

    <%= f.label "Prezime" %>
    <%= f.text_field :surname %>

    <%= f.label "Fakultet" %>
    <%= f.text_field :college %>

    <%= f.label "Godina studija" %>
    <%= f.text_field :year %>

    <%= f.label "Studij" %>
    <%= f.text_field :course %>

    <%= f.label "E-mail" %>
    <%= f.text_field :email %>

    <%= f.label "Keywords, jedna riječ, odvajaj s ';'" %>
    <%= f.text_field :keywords %>

    <%= f.label "Član EESTEC-a" %>
    <%= f.select :member, options_for_select([ "DA", "NE", "ALUMNI"]),{prompt: "Odaberi..."}, {class: "form-control"} %>

    <%= f.label :attachment %>
    <%= f.file_field :attachment %>
    <%= f.submit "Save", class: "btn btn-danger" %>
  <% end %>
</div>
